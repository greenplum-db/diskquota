-- Test that diskquota is able to cancel a running CTAS query by the schema quota.
\! gpconfig -c "diskquota.hard_limit" -v "on" > /dev/null
\! gpstop -u > /dev/null
CREATE SCHEMA hardlimit_s;
SELECT diskquota.set_schema_quota('hardlimit_s', '1 MB');
